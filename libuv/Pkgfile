# Description: Support library with a focus on asynchronous I/O
# URL:         https://libuv.org/

name=libuv
version=1.40.0
release=1
source=(https://dist.libuv.org/dist/v$version/$name-v$version.tar.gz)

build() {
    cd $name-v$version
    ./autogen.sh
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
}
